{% extends 'base.html.twig' %}

{% block body %}
    <h1>Registro de Nuevo Usuario</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <form method="POST" action="{{ path('app_nuevo_usuario') }}">
        <div class="form-group">
            <label for="username">Nombre de Usuario</label>
            <input type="text" id="username" name="_username" value="{{ username }}" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password">Contrase√±a</label>
            <input type="password" id="password" name="_password" class="form-control" required>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Registrarse</button>
    </form>
{% endblock %}